import random

class CS1410_assignment2:
   max = 0
   total = 0
   count = 0
   
   while count < 5:
      n = int(input('please enter a positive integer that is a multiple of 3: '))
      if count<1:
         min = n
      total = total + n 
      if n % 3 == 0:
         print(n, 'is a multiple of 3')
      else:
         print(n, 'is not a multiple of 3 please try again')
      if n <=0:
         print(n,' not positive or not a multiple of 3. Please try again')
      if n % 3 == 0 and n >= 0:
         count = count +1
         if max < n:
            max = n
         if min > n:
            min = n
         print('type in the next digit') 
      else:
         print(n, 'try again')
      if count == 5:
         print('end of this test')
         print('count = 5')
   print('Your maximum number is: ', max)    
   print('Your minimum number is: ', min)
   print('The total is: ', total)
   print('The average is: ', total/count)
   
